                                <Insets />
                            </opaqueInsets>
                        </TextArea>

                        <TextArea fx:id="finalArea" layoutX="55.0" layoutY="238.0" prefHeight="650.0" prefWidth="700.0" promptText="请输入要对比的文本" style="-fx-padding: 5 5 5 5;-fx-font: 15 arial;" >
