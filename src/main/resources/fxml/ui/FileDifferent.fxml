<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox maxHeight="1050" maxWidth="1600" spacing="30" alignment="CENTER">
            <children>

                <HBox spacing="20"  alignment="CENTER_LEFT">
                    <children>
                        <TextArea fx:id="originalArea" layoutX="55.0" layoutY="14.0" prefHeight="650.0" prefWidth="700.0" promptText="请输入原始文本" style="-fx-padding: 5 5 5 5;-fx-font: 15 arial;" >
