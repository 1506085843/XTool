                                <Insets />
                            </opaqueInsets>
                        </TextArea>
                    </children>
                </HBox>

                <HBox spacing="20" >
                    <children>
                        <JFXButton fx:id="compared" layoutX="55.0" layoutY="204.0" style="-fx-background-color: #5cb85c;-fx-font: 16 arial;" prefHeight="26" prefWidth="96" text="对比差异" textFill="WHITE" />
                    </children>
                </HBox>

            </children>

        </VBox>
    </children>
